<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp">


        <ImageView
            android:id="@+id/img_child_item"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/todo"
            android:scaleType="fitXY"
            android:padding="3dp"/>

        <ImageView
            android:id="@+id/video_child_item"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/video_icon2"
            android:visibility="gone"/>

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/full_child_item"
            android:scaleType="center"/>

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:visibility="gone"
            android:id="@+id/full_child_item_video"
            android:src="@drawable/video_icon2"
            android:scaleType="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/child_item_title"
            android:layout_below="@+id/img_child_item"
            android:layout_marginTop="10dp"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:background="#DABBC1C1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="invisible" />

</RelativeLayout>